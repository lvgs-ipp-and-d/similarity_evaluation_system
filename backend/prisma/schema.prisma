datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vectors {
  id            Int @id @default(autoincrement())
  vector_data   Unsupported("vector(128)")
  metadata  Metadata[]
}

model Metadata {
  id        Int @id @default(autoincrement())
  vector_id Int
  Metadata  Json

  // リレーション定義
  vectors Vectors @relation(fields: [vector_id], references: [id])
}

model Groups {
  id            Int @id @default(autoincrement())
  division_name String
  group_name    String
  group_data    Json
}